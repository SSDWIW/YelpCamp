<% layout('/layouts/boilerplate') %>

<div class="container d-flex justify-content-center align-items-center mt-5 text-white bg-dark">
    <div class="card text-white bg-dark">
        <img src="https://res.cloudinary.com/drcrzcngp/image/upload/c_thumb,w_500,g_face/v1670915554/YelpCamp/dqmggbewky5wufpaqzdf.jpg" alt="" class="card-img-top">
        <div class="card-body">
            <h3 class="card-title mb-4">Register</h3>
            <form action="/register" method="POST" class="validated-form" novalidate>
                <div class="mb-3">
                    <label class="form-label" for="username">Username</label>
                    <input class="form-control" type="text" id="username" name="username" required autofocus>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="email">Email</label>
                    <input class="form-control" type="email" id="email" name="email" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="password">Password</label>
                    <input class="form-control" type="password" id="password" name="password" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <button class="btn btn-success">Register</button>
            </form>
        </div>
    </div>
</div>


